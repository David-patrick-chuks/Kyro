{
	"name": "Kyro",
	"version": "1.0.0",
	"description": "Kyro is an AI-powered agent that automatically generates and publishes high-quality, engaging content on Hashnode. It selects trending topics, writes detailed articles, and fetches relevant cover images, saving time for bloggers and developers. Integrated with Hashnode, it automates the posting process while optimizing content for SEO, ensuring a consistent flow of fresh and relevant blog posts.",
	"main": "src/index.ts",
	"scripts": {
		"start": "tsc && node build/index.js",
		"server": "tsc && node build/server.js",
		"Kyro": "tsc && node  --no-warnings  build/index.js",
		"dev": "tsc && nodemon build/index.js",
		"ai": "tsc && node build/publisher.js",
		"engine": "tsc && node build/engine.js",
		"genkey": "node key/index.js",
		"format": "prettier . --check",
		"format:fix": "prettier . --write",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/david-patrick-chuks/Kyro.git"
	},
